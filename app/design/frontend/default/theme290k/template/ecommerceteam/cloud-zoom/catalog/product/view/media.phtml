/**
 * Product media data template
 *
 * @see Mage_Catalog_Block_Product_View_Media
 */
?>
<script type="text/javascript" src="<?php echo $this->getSkinUrl('js/zoomtool.js') ?>"></script>
<link rel="stylesheet" type="text/css" href="<?php echo $this->getSkinUrl('css/zoomtool.css') ?>" />
<?php
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
?>
<figure id="product-view-media">
	<div id="product-view-media-main-image">
        <img width="300" height="300" alt="0" src="<?php echo $this->helper('catalog/image')->init($_product, 'image')->resize(300,300)?>">
    
    	<a rel="#0" class="product-view-media-gallery no-border" href="<?php echo $this->helper('catalog/image')->init($_product, 'image')->resize(720,540)?>" id="product-view-media-zoomtool">
        	Main Image    
        </a>
	</div>
   <?php
	$bwidth = 720;
	$bheight = 540;
   ?>
   <?php if (count($this->getGalleryImages()) > 0): ?>
	    <div class="product-view-media-slider">
	        <span id="product-view-media-slider-prev">Previous</span>
	        <span id="product-view-media-slider-next">Next</span>
	        <div id="product-view-media-slider-list">
	            <ul>
	            	<?php $i = 0; foreach ($this->getGalleryImages() as $_image): ?>
			                <li>
			                    <a class="product-view-media-gallery" id="iGid<?php echo $i;?>" rel="<?php echo $this->helper('catalog/image')->init($product, 'image', $_image->getFile())->resize(300,300);?>" title="<?php echo $this->htmlEscape($_image->getLabel()) ?>" href="<?php echo $this->helper('catalog/image')->init($product, 'image', $_image->getFile())->resize($bwidth,$bheight);?>">
			                        <img width="90" height="94" alt="<?php echo $this->htmlEscape($_image->getLabel()) ?>" title="scroll mouse for set level of zoom" src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->resize(90,94); ?>">
			                    </a>
			                </li>
			        <?php $i++; endforeach;?>        
	             </ul>
	        </div>
	    </div>
   <?php endif; ?>		    
</figure>